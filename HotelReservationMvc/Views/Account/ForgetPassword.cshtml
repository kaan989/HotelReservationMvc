@{
    Layout = null;
}
<head>
    <!-- Link to Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Link to custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Link to additional custom styles -->
    <link rel="stylesheet" href="~/HotelReservationMvc.styles.css" asp-append-version="true" />
    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/ff27b9cc0e.js" crossorigin="anonymous"></script>
</head>
<form asp-action="ForgetPassword" asp-controller="Account" method="post" class="p-4 bg-light shadow-sm rounded">
    <!-- Display success message if available -->
    @if (!string.IsNullOrEmpty(ViewBag.ForgetPasswordSuccessMsg))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Information!</strong> @ViewBag.ForgetPasswordSuccessMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Display error message if available -->
    @if (!string.IsNullOrEmpty(ViewBag.ForgetPasswordFailedMsg))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Warning!</strong> @ViewBag.ForgetPasswordFailedMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Display validation summary -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-4">
        <label for="emailtext" class="form-label text-dark">Email / Kullanıcı Adı:</label>
        <div class="input-group">
            <span class="input-group-text bg-light">
                <i class="fas fa-envelope text-muted"></i>
            </span>
            <!-- Input field for email or username -->
            <input type="text" class="form-control" id="emailtext" name="emailorUsername" placeholder="Enter your email or username">
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block">
        <i class="fas fa-paper-plane"></i> Send Password Reset Email
    </button>
</form>

<!-- Scripts for jQuery and Bootstrap -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Link to custom site JavaScript -->
<script src="~/js/site.js" asp-append-version="true"></script>

@using HotelReservationMvc.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!-- Link to Bootstrap CSS for styling -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!-- Link to custom site CSS -->
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<!-- Link to additional custom styles -->
<link rel="stylesheet" href="~/HotelReservationMvc.styles.css" asp-append-version="true" />
<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/ff27b9cc0e.js" crossorigin="anonymous"></script>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h3 class="card-title text-center mb-4">Welcome Back!</h3>
                <!-- Display error message if available -->
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"]</span>
                    </div>
                }
                <!-- Login form -->
                <form asp-action="Login">
                    <!-- Display validation summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <!-- Email input field -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-envelope text-muted"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- Password input field -->
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <!-- Submit button and link to password reset -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-sign-in-alt"></i> Log in
                        </button>
                        <a asp-controller="Account" asp-action="ForgetPassword" class="btn btn-link text-muted">
                            Forget Password?
                        </a>
                    </div>
                    <!-- Link to registration page -->
                    <div class="text-center mt-4">
                        <p class="mb-0">Don't have an account?</p>
                        <a class="btn btn-outline-primary mt-2" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Sign Up
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts for jQuery and Bootstrap -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Link to custom site JavaScript -->
<script src="~/js/site.js" asp-append-version="true"></script>

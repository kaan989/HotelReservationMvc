@using HotelReservationMvc.ViewModel
@model RecoverPasswordVM

@{
    // No additional view data or logic here
}

<head>
    <!-- Link to Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Link to custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Link to additional custom styles -->
    <link rel="stylesheet" href="~/HotelReservationMvc.styles.css" asp-append-version="true" />
    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/ff27b9cc0e.js" crossorigin="anonymous"></script>
</head>

<div class="col-md-8 col-lg-8 pb-4">
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <!-- Title of the form -->
            <h3 class="card-title mb-4">Password Recovery</h3>
            <form asp-action="RecoverPassword" asp-controller="Account" method="post">

                <!-- Display success message if available -->
                @if (!string.IsNullOrEmpty(ViewBag.RecoverPasswordSuccessMsg))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> @ViewBag.RecoverPasswordSuccessMsg
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Display error message if available -->
                @if (!string.IsNullOrEmpty(ViewBag.RecoverPasswordFailedMsg))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> @ViewBag.RecoverPasswordFailedMsg
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Display validation summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- New Password input field -->
                <div class="form-group mb-4">
                    <label for="NewPassword" class="form-label">New Password:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-lock text-muted"></i>
                        </span>
                        <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" placeholder="Enter your new password">
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirm New Password input field -->
                <div class="form-group mb-4">
                    <label for="ConfirmPassword" class="form-label">Confirm New Password:</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-lock text-muted"></i>
                        </span>
                        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Re-enter your new password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Hidden fields for User ID and Token -->
                <input type="hidden" asp-for="Userid" />
                <input type="hidden" asp-for="Token" />

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-save"></i> Save My Password
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Scripts for jQuery and Bootstrap -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Link to custom site JavaScript -->
<script src="~/js/site.js" asp-append-version="true"></script>

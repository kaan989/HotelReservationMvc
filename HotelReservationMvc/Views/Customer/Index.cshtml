@model IEnumerable<Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!-- Button to navigate to the Create Customer page -->
<a href="@Url.Action("Create", "Customer")" class="btn btn-primary">
    <i class="fas fa-user-plus"></i> Add New Customer
</a>

<!-- Table to display the list of customers -->
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Address</th>
            <th></th> <!-- Edit column -->
            <th></th> <!-- Delete column -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var customer in Model)
            {
                <tr>
                    <th scope="row">@index</th>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Address</td>
                    <!-- Edit button -->
                    <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <!-- Delete button -->
                    <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id"><i class="fa-solid fa-trash"></i></a></td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No customers found</td>
            </tr>
        }
    </tbody>
</table>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Welcome to Atom Hotel</h1>
            <p class="lead text-body-secondary">Experience unparalleled luxury and comfort at Atom Hotel. Our prime location, exquisite rooms, and top-tier services make us the perfect choice for your stay. Whether you're here for business or leisure, we are committed to providing an exceptional experience.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Book Your Stay</a>
                <a href="#" class="btn btn-secondary my-2">Explore Our Amenities</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="card shadow-sm">
                    <img src="https://www.vanorohotel.com/wp-content/uploads/2021/07/drz-vanoro_6737.jpg" class="card-img-top" alt="Deluxe Room">
                    <div class="card-body">
                        <p class="card-text">Our Deluxe Room offers a serene retreat with modern amenities and elegant décor. Enjoy a comfortable stay with all the essentials at your fingertips.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View Details</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>
                            </div>
                            <small class="text-body-secondary">Available</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="https://www.vanorohotel.com/wp-content/uploads/2021/07/drz-vanoro_6737.jpg" class="card-img-top" alt="Suite Room">
                    <div class="card-body">
                        <p class="card-text">The Suite Room at Atom Hotel is the epitome of luxury. With ample space, a separate living area, and premium amenities, it’s the ideal choice for guests seeking the finest experience.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View Details</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>
                            </div>
                            <small class="text-body-secondary">Available</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="https://www.vanorohotel.com/wp-content/uploads/2021/07/drz-vanoro_6737.jpg" class="card-img-top" alt="Executive Room">
                    <div class="card-body">
                        <p class="card-text">Our Executive Room is designed for business travelers who appreciate comfort and convenience. Enjoy a productive stay with a spacious work area and complimentary high-speed internet.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View Details</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Book Now</button>
                            </div>
                            <small class="text-body-secondary">Available</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

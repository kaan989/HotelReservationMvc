@{
}
<form asp-action="Delete" method="post" class="bg-light p-4 rounded shadow-sm">

    <!-- Customer Information -->
    <div class="form-group mb-3">
        <label class="control-label">Customer</label>
        <input disabled type="text" class="form-control" value="@Model.Customer.FirstName @Model.Customer.LastName" />
    </div>

    <!-- Room Information -->
    <div class="form-group mb-3">
        <label class="control-label">Room Number</label>
        <input disabled type="text" class="form-control" value="@Model.Room.RoomNumber" />
    </div>

    <!-- Check-In Date -->
    <div class="form-group mb-3">
        <label asp-for="CheckInDate" class="control-label">Check-In Date</label>
        <input disabled asp-for="CheckInDate" class="form-control" type="date" />
        <span asp-validation-for="CheckInDate" class="text-danger"></span>
    </div>

    <!-- Check-Out Date -->
    <div class="form-group mb-3">
        <label asp-for="CheckOutDate" class="control-label">Check-Out Date</label>
        <input disabled asp-for="CheckOutDate" class="form-control" type="date" />
        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
    </div>

    <!-- Total Price -->
    <div class="form-group mb-3">
        <label class="control-label">Total Price</label>
        <input disabled type="text" class="form-control" value="@Model.TotalPrice" />
    </div>

    <!-- Submit Button -->
    <div class="form-group mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

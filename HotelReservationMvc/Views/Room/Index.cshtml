@model IEnumerable<Room>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <!-- Grid layout for displaying rooms -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <!-- Card for each room -->
                <div class="col">
                    <div class="card shadow-sm">
                        <!-- Room image -->
                        <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" alt="Room image">
                        <div class="card-body">
                            <!-- Room number and description -->
                            <p class="card-text">@item.RoomNumber</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <!-- Link to view details of the room -->
                                    <a asp-controller="Room" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <!-- Price per night -->
                                <small class="text-body-secondary">@item.PricePerNight</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
